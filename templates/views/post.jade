extends ../layouts/default

block content
	.container
		
		.row
			.col-sm-8
				
				h1 Blog
				p.lead: a(href='/blog') ... back to the blog
				hr
					
				if !data.post
					h2 Invalid Post.
				else
					h3= data.post.title
					h5 Posted 
						if data.post.publishDate
							| on #{data.post._.publishedDate.format('MMMM Do, YYYY')} 
						if data.post.categories && data.post.categories.length
							| in 
							each cat, cat_i in data.post.categories
								a(href='/blog/' + cat.key)= cat.name
								if cat_i < data.post.categories.length - 1
									| , 
								else
									|  
						if data.post.author
							| by #{data.post.author.name.first}
					div!= data.post.content.full
				
					hr
					p.lead: a(href='/blog') ... back to the blog
					
			.col-sm-4
				if data.categories.length
					h2 Category:
					.list-group
						a(href='/blog').list-group-item All Categories
						each cat in data.categories
							a(href='/blog/').list-group-item= cat.name